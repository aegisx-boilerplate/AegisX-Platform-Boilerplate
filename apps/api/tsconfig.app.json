{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "types": ["node"],
    "declaration": true,
    "emitDeclarationOnly": false,
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "module": "nodenext",
    "moduleResolution": "nodenext"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ],
  "references": [
    {
      "path": "../../libs/core/config"
    },
    {
      "path": "../../libs/core/database"
    },
    {
      "path": "../../libs/core/logger"
    }
  ]
}
