{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "target": "es2022",
    "paths": {
      "@aegisx/core-auth": ["libs/core/auth/src/index.ts"],
      "@aegisx/core-config": ["libs/core/config/src/index.ts"],
      "@aegisx/core-database": ["libs/core/database/src/index.ts"],
      "@aegisx/core-logger": ["libs/core/logger/src/index.ts"],
      "@aegisx/core-rbac": ["libs/core/rbac/src/index.ts"],
      "@aegisx/features-system-auth": [
        "libs/features/system/auth/src/index.ts"
      ],
      "@aegisx/shared-utils": ["libs/shared/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
